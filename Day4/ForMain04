public class ForMain04 {
	public static void main(String[] args) {
		int sum=0;
		for(int i=1;i<=100;i++) {
			//누적
			sum+=i;
		}
		System.out.println("1 ~ 100까지의 합은 " + sum);
		System.out.println("========================");
		int sum2 = 0;
		
		for(int i=1;i<=100;i++) {
			if(i%2==0) {
			//누적
			sum2+=i;
			}
		}
		System.out.println("1 ~ 100까지 짝수의 합은 " + sum2);
	}

}
