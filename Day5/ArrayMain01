public class ArrayMain01 {
	public static void main(String[] args) {
		//배열 선언
		char[] ch;
		//배열 생성
		ch = new char[4];
		//배열 초기화
		
		ch[0]='J';
		ch[1]='a';
		ch[2]='v';
		ch[3]='a';
		
		//배열 요소 출력
		System.out.println("ch[0] : "+ch[0]);
		System.out.println("ch[1] : "+ch[1]);
		System.out.println("ch[2] : "+ch[2]);
		System.out.println("ch[3] : "+ch[3]);
		
		int len= ch.length;
		for(int i=0; i<len; i++){
			System.out.printf("%c",ch[i]);
		}

	}

}
