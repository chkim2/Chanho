package com.d01.instance;

public class Student2 {
	//멤버 필드
	String name;
	int korean;
	int math;
	int english;
	int sum;
	double avgerage;
	
	public static void main(String[] args) {
		//객체 선언 및 생성
		Student2 student = new Student2();
		//멤버변수에 데이터 할당
		student.name = "김연아";
		student.korean = 97;
		student.math = 88;
		student.english = 96;
		student.sum = student.korean + student.math + student.english;
		student.avgerage = student.sum / 3.0;
		
		System.out.println("이름 : "+student.name);
		System.out.printf("국어 : %d%n",student.korean);
		System.out.printf("수학 : %d%n",student.math);
		System.out.printf("영어 : %d%n",student.english);
		System.out.printf("총점 : %d%n",student.sum);
		System.out.printf("평균 : %.2f%n",student.avgerage);
		

	}

}
